{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Conveyor",
    "version": "0.1.0",
    "identifier": "com.robinthrift.conveyor",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:6155",
        "beforeDevCommand": "just serve",
        "beforeBuildCommand": "just build"
    },
    "app": {
        "windows": [],
        "security": { "csp": null }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
